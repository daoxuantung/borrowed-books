extends ../layouts/common

block content
  h1(style="margin-top: 5rem; margin-left: 1rem;") Add Book
  
  if errors
    each error in errors
      .alert.alert-danger.ml-3(style="width: 20rem;")= error

  form.ml-3.mt-3(method="post", style="width: 15rem;")
    .form-group
      label(for='title') Book Title
      input#title.form-control(type='text', name="title", placeholder='Eloquent JavaScript', value= values ? values.title : '')
    .form-group
      label(for='description') Description
      input#description.form-control(type='text', name="description", placeholder='Modern Introduction to Programming', value= values ? values.description : '')
    button.btn.btn-primary(type='submit') Add