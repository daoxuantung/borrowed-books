html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles/custom.css")
    link(rel="icon" type="image/png" href="https://cdn.glitch.com/76eb7ae0-ae98-4620-949c-4446601d134b%2Ffavicon.png?v=1587799535222")
    script(src='https://kit.fontawesome.com/14017c2bfa.js', crossorigin='anonymous')
    style.
      body {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }
  body
    .block
      if errors
        each error in errors
          .alert.alert-danger.ml-3(style="width: 20rem;")= error

    form.ml-3.mt-3.form-login(method="post")
      h1.title Login
      .form-group
        label(for='email') Email
        input#email.form-control(type='text',name="email", placeholder='abc@gmail.com', value= values ? values.email : '')
      .form-group
        label(for='password') Password
        input#password.form-control(type='password',name="password", placeholder='********')
      button.btn.btn-primary(type='submit') Login

      p(style="text-align: center;") Don't have an account? 
        a(href="/signup") Sign up